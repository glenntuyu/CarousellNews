<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/red_1</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>

    <style name="TextAppearance.TextHeader" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">19sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="typeface">regular</item>
    </style>

    <style name="TextAppearance.TextTitle" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight" tools:targetApi="p">19sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="typeface">medium</item>
    </style>

    <style name="TextAppearance.TextBody" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="typeface">regular</item>
    </style>

    <style name="TextAppearance.TextCaption" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight" tools:targetApi="p">14sp</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="typeface">regular</item>
    </style>

</resources>